.video-container
  %video{id: '', class: 'video-js vjs-defaukt-skin', controls: 'controls', autoplay: 'autoplay', preload: 'none', width: '854px', height: '510px', poster: @video.image.url}
    %source{src: @video.video.url(:mp4), type: 'video/mp4'}
    %source{src: @video.video.url(:webm), type: 'video/webm'}
    %source{src: @video.video.url(:ogg), type: 'video/ogg'}

.video-information
  .title= @video.title
  .director= "Dir. #{@video.director}"